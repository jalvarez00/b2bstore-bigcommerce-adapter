{
    "name": "@b2bstore/bigcommerce-adapter",
    "private": false,
    "version": "0.0.4",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "clean": "rimraf node_modules && rimraf package-lock.json && rimraf yarn.lock && rimraf dist && rimraf .vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
        "lint:fix": "eslint --fix 'src/**/*.{jsx,ts,tsx,config.ts}'",
        "format": "prettier --write src/**/*.ts --config ./.prettierrc",
        "prepare": "husky install"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts}": [
            "yarn  format",
            "yarn  lint:fix"
        ]
    },
    "main": "./src/index.ts",
    "dependencies": {
        "@apollo/client": "^3.7.3"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.34.0",
        "@typescript-eslint/parser": "^5.34.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^8.0.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.3",
        "prettier": "^2.8.1",
        "typescript": "^4.9.3",
        "vite": "^4.0.0",
        "vite-plugin-dts": "^1.7.1"
    },
    "peerDependencies": {
        "@apollo/client": "^3.7.3"
    },
    "output": {
        "globals": {
            "@apollo/client": "ApolloClient"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jalvarez00/b2bstore-bigcommerce-adapter"
    },
    "keywords": [
        "api",
        "bigcommerce",
        "b2bstore"
    ],
    "author": "Orienteed SLU",
    "bugs": {
        "url": "https://github.com/jalvarez00/b2bstore-bigcommerce-adapter/issues"
    },
    "homepage": "https://github.com/jalvarez00/b2bstore-bigcommerce-adapter#readme",
    "license": "MIT"
}
